<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Rails Wikinimous</h1>
      <p class="lead">All articles</p>
    </div>
  </div>

  <% @articles.each do |article| %>
    <article class="d-flex justify-content-between align-items-baseline">
      <div class="card-text">
        <h4 class="mt-5"><%= article.title %></h3>
        <p><%= article.content %></p>
      </div>
      <div class="access-btn">
        <%= link_to 'Access article', article_path(article), class: 'btn btn-primary' %>
        <%= link_to "Delete",
                  articles_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-danger" %>
      </div>
    </article>
  <% end %>
  <%= link_to 'New article', new_article_path, class: 'btn btn-primary' %>
</div>
