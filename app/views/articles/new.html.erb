<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Add an article</h1>
    </div>
  </div>

  <%= simple_form_for(@article) do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
</div>
